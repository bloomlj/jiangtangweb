  <li>
    证件号(学号或者身份证号):<input name="idcard" value=""/>
  </li>

  <li>
    手机号码:<input name="mobile" value=""/>
  </li>

  <li>
    qq号码:<input name="qq" value=""/>
  </li>

  <li>
    专业领域:<input name="profield" value=""/>
  </li>
  <li>
    rfid:<input name="rfid" value=""/>
  </li>
  <li>
    简介:<textarea name="about" ></textarea>
  </li>
</ul>
<button>提交</button>
</form>
